.events-container {
  min-height: 100vh;
  background: #0f172a;
}

/* 标签栏 */
.events-tabs {
  display: flex;
  background: #1e293b;
  padding: 16rpx 32rpx;
  gap: 32rpx;
  border-bottom: 1rpx solid #334155;
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  border-bottom: 3rpx solid transparent;
}

.tab-item.active {
  border-bottom-color: #fbbf24;
}

.tab-text {
  font-size: 30rpx;
  color: #64748b;
}

.tab-item.active .tab-text {
  color: #fbbf24;
  font-weight: bold;
}

/* 活动列表 */
.events-list {
  padding: 24rpx;
}

.event-card {
  background: rgba(30, 41, 59, 0.8);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.event-card:active {
  border-color: rgba(251, 191, 36, 0.3);
  transform: scale(0.98);
}

/* 活动封面 */
.event-cover {
  position: relative;
  height: 300rpx;
  overflow: hidden;
}

.cover-image {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
}

.status-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: bold;
  backdrop-filter: blur(10rpx);
}

.status-UPCOMING {
  background: rgba(251, 191, 36, 0.9);
  color: #1e293b;
}

.status-ONGOING {
  background: rgba(34, 197, 94, 0.9);
  color: #1e293b;
}

.status-ENDED {
  background: rgba(156, 163, 175, 0.9);
  color: #1e293b;
}

.status-CANCELLED {
  background: rgba(239, 68, 68, 0.9);
  color: #fff;
}

.type-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background: rgba(15, 23, 42, 0.8);
  color: #fbbf24;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
  backdrop-filter: blur(10rpx);
}

/* 活动内容 */
.event-content {
  padding: 32rpx;
}

.event-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.event-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #f1f5f9;
  flex: 1;
  margin-right: 16rpx;
}

.event-time {
  flex-shrink: 0;
}

.time-text {
  font-size: 24rpx;
  color: #fbbf24;
  background: rgba(251, 191, 36, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  border: 1rpx solid rgba(251, 191, 36, 0.3);
}

.event-description {
  margin-bottom: 24rpx;
}

.event-description text {
  font-size: 28rpx;
  color: #cbd5e1;
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 活动详情 */
.event-details {
  margin-bottom: 24rpx;
}

.detail-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  gap: 12rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-icon {
  font-size: 24rpx;
  width: 32rpx;
  flex-shrink: 0;
}

.detail-text {
  font-size: 26rpx;
  color: #94a3b8;
  flex: 1;
}

/* 进度条 */
.participants-progress {
  flex: 1;
  margin-left: 16rpx;
}

.progress-bar {
  height: 8rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #fbbf24 0%, #f59e0b 100%);
  transition: width 0.3s;
  border-radius: 4rpx;
}

/* 操作按钮 */
.event-actions {
  display: flex;
  justify-content: flex-end;
}

.btn-register {
  font-size: 26rpx;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  line-height: 1;
  border: none;
  min-width: 140rpx;
}

.btn-register {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  color: #1e293b;
  font-weight: bold;
}

.btn-registered {
  background: rgba(34, 197, 94, 0.1);
  border: 2rpx solid rgba(34, 197, 94, 0.3) !important;
  color: #22c55e;
}

.btn-disabled {
  background: rgba(156, 163, 175, 0.1);
  border: 2rpx solid rgba(156, 163, 175, 0.3) !important;
  color: #9ca3af;
}

.btn-login {
  background: rgba(59, 130, 246, 0.1);
  border: 2rpx solid rgba(59, 130, 246, 0.3) !important;
  color: #3b82f6;
}

.btn-register:active:not([disabled]) {
  opacity: 0.8;
  transform: scale(0.95);
}

.no-registration {
  padding: 16rpx 32rpx;
}

.no-registration text {
  font-size: 26rpx;
  color: #64748b;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 32rpx;
  gap: 16rpx;
}

.empty-icon {
  font-size: 96rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #64748b;
}

/* 加载中 */
.loading {
  padding: 48rpx;
  text-align: center;
  font-size: 28rpx;
  color: #64748b;
}