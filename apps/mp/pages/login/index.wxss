.login-container {
  min-height: 100vh;
  position: relative;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #334155 100%);
  display: flex;
  flex-direction: column;
  padding: 80rpx 32rpx 160rpx;
}

/* 背景装饰 */
.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.bg-pattern {
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(251, 191, 36, 0.1) 0%, transparent 70%);
  animation: rotate 20s linear infinite;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 主要内容 */
.main-content {
  flex: 1;
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 80rpx;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 40rpx;
}

.logo {
  margin-bottom: 32rpx;
}

.logo-text {
  font-size: 120rpx;
  font-weight: bold;
  color: #fbbf24;
  font-family: Georgia, serif;
  letter-spacing: 8rpx;
  text-shadow: 0 8rpx 32rpx rgba(251, 191, 36, 0.5);
  animation: glow 2s ease-in-out infinite alternate;
}

@keyframes glow {
  from {
    text-shadow: 0 8rpx 32rpx rgba(251, 191, 36, 0.3);
  }
  to {
    text-shadow: 0 8rpx 32rpx rgba(251, 191, 36, 0.8);
  }
}

.app-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 12rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #94a3b8;
}

/* 登录卡片 */
.login-card {
  background: rgba(30, 41, 59, 0.8);
  border-radius: 32rpx;
  padding: 64rpx 48rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(251, 191, 36, 0.2);
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.5);
}

.card-header {
  text-align: center;
  margin-bottom: 64rpx;
}

.welcome-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #fbbf24;
  margin-bottom: 16rpx;
}

.welcome-subtitle {
  font-size: 28rpx;
  color: #cbd5e1;
  line-height: 1.6;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  border: none;
  border-radius: 56rpx;
  padding: 32rpx 0;
  margin-bottom: 48rpx;
  box-shadow: 0 8rpx 32rpx rgba(251, 191, 36, 0.4);
  transition: all 0.3s ease;
}

.login-btn.loading {
  background: #64748b;
  box-shadow: none;
}

.login-btn::after {
  border: none;
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.btn-icon {
  font-size: 48rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #1e293b;
}

.loading-icon {
  font-size: 48rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

/* 权益说明 */
.benefits {
  margin-bottom: 48rpx;
}

.benefits-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 24rpx;
  text-align: center;
}

.benefit-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx 0;
}

.benefit-icon {
  font-size: 32rpx;
  width: 48rpx;
  text-align: center;
}

.benefit-text {
  flex: 1;
  font-size: 26rpx;
  color: #cbd5e1;
  line-height: 1.5;
}

/* 协议 */
.agreement {
  text-align: center;
  font-size: 22rpx;
  color: #64748b;
  line-height: 1.6;
}

.agreement-text {
  color: #64748b;
}

.agreement-link {
  color: #fbbf24;
  text-decoration: underline;
}

/* 底部 */
.footer {
  text-align: center;
  margin-top: auto;
}

.footer-text {
  font-size: 24rpx;
  color: #475569;
  font-style: italic;
}

/* 游客提示 */
.guest-tip {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  z-index: 3;
}

.guest-link {
  font-size: 26rpx;
  color: #94a3b8;
  text-decoration: underline;
  padding: 16rpx 32rpx;
  background: rgba(15, 23, 42, 0.8);
  border-radius: 32rpx;
  backdrop-filter: blur(10rpx);
}