/* pages/table/index.wxss */
page {
  background-color: #1c1c1e; /* 深色背景 */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  color: #fff;
  padding-bottom: 120rpx; /* 给底部导航栏留空间 */
}

.container {
  padding: 0 30rpx;
}

/* --- 1. 顶部导航栏 --- */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-top: env(safe-area-inset-top);
}

.store-name {
  color: #FFD700;
  font-size: 32rpx;
  font-weight: bold;
}

.rule-btn {
  background-color: #2c2c2e;
  color: #FFD700;
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
  border: 1rpx solid #FFD700;
}

/* --- 2. 赛事桌通用样式 --- */
.table-section {
  margin-top: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-group {
  display: flex;
  align-items: baseline;
}

.main-title {
  color: #FFD700;
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.update-time {
  color: #666;
  font-size: 24rpx;
}

.status-badge {
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #4CAF50;
  border-radius: 50%;
  margin-right: 8rpx;
}

/* 信息卡片 */
.info-card {
  background-color: #2c2c2e;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.info-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

.info-text {
  display: flex;
  flex-direction: column;
}

.label {
  color: #888;
  font-size: 22rpx;
}

.value {
  color: #fff;
  font-size: 28rpx;
  font-weight: bold;
}

.divider {
  width: 2rpx;
  height: 40rpx;
  background-color: #444;
}

/* --- 3. 牌桌区域 (核心) --- */
.poker-table-container {
  position: relative;
  width: 100%;
  height: 600rpx; /* 根据背景图比例调整 */
  margin-bottom: 40rpx;
}

.table-bg {
  width: 100%;
  height: auto;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 0;
}

/* 座位通用样式 */
.seat {
  position: absolute;
  width: 100rpx;
  height: 140rpx;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10;
  box-sizing: border-box;
}

/* 空座位样式 */
.seat.empty {
  border: 1rpx dashed #666;
  background-color: rgba(0,0,0,0.3);
}

.chair-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
  color: #666;
}

.seat-label {
  color: #666;
  font-size: 20rpx;
}

/* 占用座位样式 */
.seat.reserved, .seat.playing {
  border: 2rpx solid #FFD700; /* 默认金色边框 */
  background-color: #1a1a1a;
}

.seat.reserved {
  border-color: #409EFF; /* 预约蓝色边框 */
}

.seat.playing {
  border-color: #67C23A; /* 游戏中绿色边框 */
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 4rpx;
  border: 2rpx solid #333;
}

.nickname {
  color: #fff;
  font-size: 20rpx;
  max-width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 4rpx;
}

.status-tag {
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  color: #fff;
}

.reserved-tag {
  background-color: #409EFF;
}

.playing-tag {
  background-color: #67C23A;
}

/* 座位号标记 */
.seat-number {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  width: 28rpx;
  height: 28rpx;
  background-color: #FFD700;
  color: #000;
  font-size: 18rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 28rpx;
  font-weight: bold;
}

/* --- 座位定位 (9人桌) --- */
/* 
   布局逻辑：
   1号: 右上
   2号: 右中上
   3号: 右中下
   4号: 右下
   5号: 下中
   6号: 左下
   7号: 左中下
   8号: 左中上
   9号: 左上
*/

/* 顶部左右 */
.seat-1 { top: 10%; right: 18%; }
.seat-9 { top: 10%; left: 18%; }

/* 中间偏上 */
.seat-2 { top: 30%; right: 2%; }
.seat-8 { top: 30%; left: 2%; }

/* 中间偏下 */
.seat-3 { top: 55%; right: 2%; }
.seat-7 { top: 55%; left: 2%; }

/* 底部左右 */
.seat-4 { bottom: 10%; right: 18%; }
.seat-6 { bottom: 10%; left: 18%; }

/* 底部正中 */
.seat-5 { bottom: 2%; left: 50%; transform: translateX(-50%); }


/* --- 4. 副赛事桌 & 候补 --- */
.sub-section {
  margin-top: 60rpx;
  border: 1rpx solid #FFD700;
  border-radius: 20rpx;
  padding: 20rpx;
  background-color: #222;
}

.waiting-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.avatar-list {
  display: flex;
}

.waiting-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-right: -20rpx; /* 头像重叠效果 */
}

.wait-btn {
  background-color: #333;
  color: #FFD700;
  border: 1rpx solid #FFD700;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
}

/* --- 底部导航栏 (复用) --- */
.custom-tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  background-color: #262322;
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  padding-top: 20rpx;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
  border-top: 1rpx solid #222;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.tab-icon-img {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.tab-item text {
  font-size: 22rpx;
  color: #666;
}

.tab-item.active text {
  color: #FFD700;
}
