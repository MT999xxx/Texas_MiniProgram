/* pages/table/index.wxss */
page {
  background-color: #030304; /* 更深邃的黑色背景 */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  color: #fff;
  padding-bottom: 120rpx;
}

.container {
  padding: 0 20rpx; /* 稍微减小左右边距 */
}

/* --- 1. 顶部导航栏 --- */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0; /* 恢复正常 padding */
  /* margin-top: env(safe-area-inset-top);  原生导航栏已处理顶部安全区 */
}

.store-name {
  color: #FFD700;
  font-size: 40rpx;
  font-weight: 900;
  letter-spacing: 1rpx;
}

.rule-btn {
  background-color: rgba(255, 215, 0, 0.1);
  color: #FFD700;
  font-size: 30rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  border: 1rpx solid #FFD700;
  font-weight: 500;
}

/* --- 2. 赛事桌通用样式 --- */
.table-section {
  margin-top: 10rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-group {
  display: flex;
  align-items: baseline;
}

.main-title {
  color: #FFD700;
  font-size: 40rpx; /* 放大 */
  font-weight: 900;
  margin-right: 16rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

.update-time {
  color: #666;
  font-size: 30rpx; /* 放大 */
  font-weight: 400;
}

.status-badge {
  display: flex;
  align-items: center;
  color: #fff;
  font-size: 30rpx; /* 放大 */
  background: rgba(255,255,255,0.1);
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #4CAF50;
  border-radius: 50%;
  margin-right: 10rpx;
  box-shadow: 0 0 8rpx #4CAF50;
}

/* 信息卡片 - 优化为黑底 */
.info-card {
  background-color: #111; /* 纯黑/深灰背景 */
  border-radius: 30rpx;
  padding: 30rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  border: 1rpx solid #333;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.5);
}

.info-item {
  display: flex;
  align-items: center;
  flex: 1;
  justify-content: center;
}

.info-icon {
  width: 40rpx; /* 放大 */
  height: 40rpx;
  margin-right: 20rpx;
  opacity: 0.9;
}

.info-text {
  display: flex;
  flex-direction: column;
}

.label {
  color: #888;
  font-size: 30rpx; /* 放大 */
  margin-bottom: 4rpx;
}

.value {
  color: #fff;
  font-size: 36rpx; /* 放大 */
  font-weight: bold;
  letter-spacing: 1rpx;
}

.divider {
  width: 2rpx;
  height: 60rpx;
  background-color: #444;
  margin: 0 30rpx;
}

/* --- 3. 牌桌区域 (核心) --- */
.poker-table-container {
  position: relative;
  width: auto;
  height: 1060rpx; /* 放大 15% (原920) */
  margin-bottom: 0; /* 去除底部边距 */
  background: radial-gradient(circle at center, #2a2a2a 0%, #030304 70%);
  border-radius: 50rpx;
  overflow: hidden;
}

.table-bg {
  width: 115%; /* 放大背景图 */
  height: 115%;
  position: absolute;
  top: 35%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 0;
  opacity: 1; /* 提高清晰度 */
}

/* 座位通用样式 - 放大 */
.seat {
  position: absolute;
  width: 120rpx; /* 放大 */
  height: 200rpx; /* 放大 */
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 10;
  box-sizing: border-box;
}

/* 空座位样式 */
.seat.empty {
  border: 2rpx dashed #444;
  background-color: #030304;
}

.chair-icon {
  font-size: 56rpx; /* 放大 */
  margin-bottom: 8rpx;
  color: #030304;
}

.seat-label {
  color: #666;
  font-size: 24rpx; /* 放大 */
}

/* 占用座位样式 */
.seat.reserved, .seat.playing {
  border: 3rpx solid #FFD700;
  background-color: #030304;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.6);
}

.seat.reserved {
  border-color: #409EFF;
}

.seat.playing {
  border-color: #67C23A;
}

.avatar {
  width: 96rpx; /* 放大 */
  height: 96rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
  border: 3rpx solid #333;
}

.nickname {
  color: #fff;
  font-size: 24rpx; /* 放大 */
  max-width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-bottom: 8rpx;
}

.status-tag {
  font-size: 22rpx; /* 放大 */
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  color: #fff;
  line-height: 1.2;
}

.reserved-tag {
  background-color: #409EFF;
}

.playing-tag {
  background-color: #67C23A;
}

/* 座位号标记 */
.seat-number {
  position: absolute;
  top: -20rpx;
  left: -20rpx;
  width: 40rpx; /* 放大 */
  height: 40rpx;
  background-color: #FFD700;
  color: #000;
  font-size: 24rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-weight: 900;
  border: 2rpx solid #000;
}

/* --- 座位定位 (9人桌) - 适配大桌 --- */
/* 
   布局逻辑：
   随着桌子放大，座位向外扩散
*/

/* 上方左右 */
.seat-1 { top: 2%; right: 20%; }
.seat-9 { top: 2%; left: 20%; }

/* 中间偏上 */
.seat-2 { top: 8%; right: 1%; }
.seat-8 { top: 8%; left: 1%; }

/* 中间偏下 */
.seat-3 { top: 28%; right: 1%; }
.seat-7 { top: 28%; left: 1%; }

/* 底部左右 */
.seat-4 { bottom: 30%; right: 14%; }
.seat-6 { bottom: 30%; left: 14%; }

/* 底部正中 */
.seat-5 { bottom: 26%; left: 50%; transform: translateX(-50%); }


/* --- 4. 副赛事桌 & 候补 --- */
.sub-section {
  margin-top: 0; /* 去除顶部边距 */
  border: 1rpx solid #030304;
  border-radius: 30rpx;
  padding: 30rpx;
  background-color: #030304; /* 统一黑底 */
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.3);
}

.waiting-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 30rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #333;
}

.avatar-list {
  display: flex;
  padding-left: 10rpx;
}

.waiting-avatar {
  width: 64rpx; /* 放大 */
  height: 64rpx;
  border-radius: 50%;
  border: 2rpx solid #222;
  margin-right: -20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
}

.wait-btn {
  background: linear-gradient(90deg, #FFD700, #FFC107);
  color: #000;
  border: none;
  padding: 14rpx 40rpx; /* 放大 */
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 10rpx rgba(255, 215, 0, 0.3);
}

/* --- 5. 弹窗样式 --- */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 80%;
  background-color: #000;
  border-radius: 20rpx;
  padding: 40rpx;
  border: 1rpx solid #333;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.5);
}

.rules-title {
  color: #FFD700;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 30rpx;
}

.rules-list {
  max-height: 60vh;
  overflow-y: auto;
}

.rule-item {
  color: #FFD700; /* 默认金色，部分文字可能需要白色，这里整体用金色或浅黄 */
  font-size: 26rpx;
  margin-bottom: 20rpx;
  line-height: 1.5;
  text-align: justify;
}
