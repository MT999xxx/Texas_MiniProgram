.recharge-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
  padding: 24rpx;
}

/* 用户信息区域 */
.user-info-section {
  display: flex;
  align-items: center;
  background: rgba(30, 41, 59, 0.8);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid rgba(251, 191, 36, 0.2);
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 3rpx solid #fbbf24;
  margin-right: 24rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-details {
  flex: 1;
}

.user-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 8rpx;
}

.current-points {
  display: flex;
  align-items: center;
}

.points-label {
  font-size: 26rpx;
  color: #cbd5e1;
}

.points-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #fbbf24;
  margin-left: 8rpx;
}

.history-btn {
  background: rgba(251, 191, 36, 0.1);
  border: 2rpx solid rgba(251, 191, 36, 0.3);
  border-radius: 12rpx;
  padding: 16rpx 24rpx;
}

.history-btn text {
  font-size: 26rpx;
  color: #fbbf24;
}

.history-btn:active {
  opacity: 0.8;
  transform: scale(0.95);
}

/* 套餐区域 */
.packages-section {
  flex: 1;
}

.section-title {
  margin-bottom: 24rpx;
}

.section-title text {
  font-size: 36rpx;
  font-weight: bold;
  color: #f1f5f9;
}

.packages-scroll {
  max-height: 60vh;
}

/* 套餐卡片 */
.package-card {
  position: relative;
  background: rgba(30, 41, 59, 0.8);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s;
}

.package-card.recommended {
  border-color: rgba(251, 191, 36, 0.5);
  background: rgba(251, 191, 36, 0.05);
}

.package-card:active {
  transform: scale(0.98);
  border-color: rgba(251, 191, 36, 0.8);
}

/* 推荐标签 */
.recommend-badge {
  position: absolute;
  top: -10rpx;
  right: 24rpx;
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  color: #1e293b;
  font-size: 22rpx;
  font-weight: bold;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(251, 191, 36, 0.3);
}

/* 套餐头部 */
.package-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 24rpx;
}

.package-info {
  flex: 1;
  margin-right: 24rpx;
}

.package-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #f1f5f9;
  margin-bottom: 8rpx;
}

.package-desc {
  font-size: 24rpx;
  color: #94a3b8;
  line-height: 1.4;
}

.package-price {
  display: flex;
  align-items: baseline;
  flex-shrink: 0;
}

.price-symbol {
  font-size: 24rpx;
  color: #fbbf24;
}

.price-value {
  font-size: 42rpx;
  font-weight: bold;
  color: #fbbf24;
}

/* 积分明细 */
.points-breakdown {
  margin-bottom: 16rpx;
}

.points-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.points-row:last-child {
  margin-bottom: 0;
}

.points-type {
  font-size: 26rpx;
  color: #cbd5e1;
}

.points-amount {
  font-size: 28rpx;
  font-weight: bold;
  color: #f1f5f9;
}

.points-row.bonus .points-type {
  color: #22c55e;
}

.points-row.bonus .points-amount {
  color: #22c55e;
}

.points-row.total {
  border-top: 2rpx solid rgba(255, 255, 255, 0.1);
  padding-top: 12rpx;
  margin-top: 12rpx;
}

.total-value {
  color: #fbbf24 !important;
  font-size: 32rpx !important;
}

/* 优惠信息 */
.discount-info {
  text-align: center;
  padding-top: 16rpx;
}

.discount-text {
  font-size: 24rpx;
  color: #22c55e;
  background: rgba(34, 197, 94, 0.1);
  border: 1rpx solid rgba(34, 197, 94, 0.3);
  border-radius: 12rpx;
  padding: 8rpx 16rpx;
}

/* 充值说明 */
.payment-notice {
  background: rgba(30, 41, 59, 0.6);
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 32rpx 0;
  border: 2rpx solid rgba(59, 130, 246, 0.2);
}

.notice-title {
  margin-bottom: 16rpx;
}

.notice-title text {
  font-size: 28rpx;
  font-weight: bold;
  color: #3b82f6;
}

.notice-content text {
  display: block;
  font-size: 24rpx;
  color: #94a3b8;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

/* 安全提示 */
.security-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  margin-top: 24rpx;
}

.security-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.security-text {
  font-size: 24rpx;
  color: #64748b;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 80rpx 32rpx;
  color: #64748b;
}

/* 支付加载遮罩 */
.payment-loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-content {
  background: rgba(30, 41, 59, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 2rpx solid rgba(251, 191, 36, 0.3);
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(251, 191, 36, 0.3);
  border-top-color: #fbbf24;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #f1f5f9;
  text-align: center;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}