/* pages/member/index.wxss */
page {
  background-color: #030304;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  padding-bottom: 120rpx;
}

.container {
  padding: 30rpx;
}

/* --- 1. 用户信息区域 --- */
.user-info-section {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 2rpx solid #444;
  margin-right: 30rpx;
}

.user-details {
  display: flex;
  flex-direction: column;
}

.user-nickname {
  color: #FFD700;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-id {
  color: #888;
  font-size: 24rpx;
}

/* --- 2. 会员卡片区域 --- */
.member-card {
  background-color: #25252b; /* 深灰背景 */
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.2);
  border: 1rpx solid #333;
}

.card-header {
  margin-bottom: 60rpx;
}

.level-info {
  display: flex;
  align-items: baseline;
}

.level-tag {
  color: #fff;
  font-size: 48rpx;
  font-weight: 900;
  margin-right: 16rpx;
  font-style: italic;
}

.level-name {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.card-body {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.progress-text {
  color: #666;
  font-size: 22rpx;
}

.view-more {
  color: #FFD700;
  font-size: 22rpx;
}

/* 数据统计栏 */
.stats-row {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 0;
  border-top: 1rpx solid #333;
  border-bottom: 1rpx solid #333;
  margin-bottom: 40rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  color: #FFD700;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.stat-label {
  color: #888;
  font-size: 24rpx;
}

.stat-divider {
  width: 2rpx;
  height: 40rpx;
  background-color: #444;
}

/* 充值按钮 */
.recharge-btn {
  background: linear-gradient(90deg, #FFD700, #FFA000);
  color: #000;
  font-weight: bold;
  border-radius: 50rpx;
  font-size: 32rpx;
  padding: 10rpx 0;
  width: 80%;
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.3);
}

/* --- 3. 功能菜单列表 --- */
.menu-list {
  background-color: #25252b;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  border: 1rpx solid #333;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #333;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 24rpx;
  opacity: 0.8;
}

.menu-text {
  color: #fff;
  font-size: 30rpx;
}

.menu-arrow {
  color: #666;
  font-size: 28rpx;
}

/* --- 4. 充值弹窗样式 --- */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 85%;
  background-color: #25252b;
  border-radius: 30rpx;
  padding: 40rpx 30rpx;
  border: 1rpx solid #333;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.5);
}

.modal-title {
  color: #FFD700;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.amount-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.amount-item {
  width: 48%;
  background-color: #333;
  border-radius: 16rpx;
  padding: 30rpx 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.amount-item.active {
  background-color: rgba(255, 215, 0, 0.1);
  border-color: #FFD700;
}

.amount-value {
  color: #fff;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.amount-item.active .amount-value {
  color: #FFD700;
}

.amount-desc {
  color: #888;
  font-size: 22rpx;
  text-align: center;
}

.amount-item.active .amount-desc {
  color: #FFD700;
}

.input-container {
  background-color: #333;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}

.custom-input {
  flex: 1;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
}

.input-placeholder {
  color: #666;
}

.clear-btn {
  position: absolute;
  right: 20rpx;
  color: #888;
  padding: 10rpx;
  font-size: 28rpx;
}

.bonus-tip {
  text-align: center;
  color: #ccc;
  font-size: 26rpx;
  margin-bottom: 40rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
}

.cancel-btn, .submit-btn {
  width: 45%;
  padding: 20rpx 0;
  border-radius: 50rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.cancel-btn {
  background-color: #444;
  color: #ccc;
}

.submit-btn {
  background: linear-gradient(90deg, #FFD700, #FFA000);
  color: #000;
}
