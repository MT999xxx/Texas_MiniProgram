/* pages/ranking/index.wxss */
page {
  background-color: #1c1c1e; /* 页面背景色与列表背景一致，防止露底 */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  padding-bottom: 120rpx; /* 底部导航栏空间 */
}

.container {
  width: 100%;
  min-height: 100vh;
  background-color: #E69028; /* 橙色背景填充顶部 */
}

/* --- 1. 橙色头部区域 --- */
.header-section {
  background-color: #E69028;
  padding: 20rpx 40rpx 0 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.store-label {
  position: absolute;
  left: 40rpx;
  top: 20rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.page-title {
  font-size: 80rpx;
  color: #4A3B28; /* 深褐色文字 */
  font-weight: 400;
  letter-spacing: 4rpx;
  margin-top: 40rpx;
  margin-bottom: 10rpx;
}

.date-range {
  font-size: 24rpx;
  color: #8B6940;
  margin-bottom: 60rpx;
}

/* Tab 栏 */
.tab-header {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding-bottom: 30rpx;
}

.tab-item {
  font-size: 30rpx;
  color: #FFE4C4; /* 浅色未选中 */
  position: relative;
  padding-bottom: 10rpx;
}

.tab-item.active {
  color: #fff;
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #FF4500; /* 红色下划线 */
  border-radius: 4rpx;
}

/* --- 2. 排行榜列表区域 --- */
.ranking-list-container {
  background-color: #111; /* 黑色背景 */
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding: 40rpx 30rpx;
  min-height: 60vh; /* 保证列表区域足够高 */
  width: 90%; /* 自动宽度，由 margin 决定 */
  margin: -20rpx 24rpx 0 24rpx; /* 上移并设置左右边距 */
  box-sizing: border-box; /* 防止内边距撑大容器 */
  position: relative; /* 确保层级 */
  z-index: 1;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  /* border-bottom: 1rpx solid #222; */
}

.rank-num {
  width: 60rpx;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  margin-right: 20rpx;
}

.rank-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-right: 30rpx;
}

.rank-info {
  display: flex;
  flex-direction: column;
}

.rank-name {
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.rank-score {
  color: #888;
  font-size: 24rpx;
}

/* Loading状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 400rpx;
}

.loading-text {
  color: #888;
  font-size: 28rpx;
}

/* 空数据提示 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 400rpx;
  padding: 60rpx 40rpx;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 15rpx;
}

.empty-hint {
  color: #888;
  font-size: 24rpx;
}

/* 前三名特殊颜色 */
.rank-1 {
  color: #FFD700 !important; /* 金色 */
}

.rank-2 {
  color: #C0C0C0 !important; /* 银色 */
}

.rank-3 {
  color: #CD7F32 !important; /* 铜色 */
}

.rank-normal {
  color: #fff;
}

/* 用户排名卡片 */
.user-rank-card {
  position: fixed;
  bottom: 120rpx; /* 底部导航栏上方 */
  left: 24rpx;
  right: 24rpx;
  background: linear-gradient(135deg, #E69028 0%, #D67E1F 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(230, 144, 40, 0.5);
  z-index: 10;
}

.user-rank-content {
  display: flex;
  flex-direction: column;
}

.user-rank-label {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 16rpx;
}

.user-rank-info {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 3rpx solid #fff;
  margin-right: 24rpx;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 6rpx;
}

.user-score {
  color: rgba(255, 255, 255, 0.9);
  font-size: 26rpx;
}

.user-rank-badge {
  background-color: rgba(255, 255, 255, 0.25);
  border-radius: 12rpx;
  padding: 12rpx 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 80rpx;
}

.rank-text {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}