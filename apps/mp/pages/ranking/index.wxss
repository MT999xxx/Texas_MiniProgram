/* pages/ranking/index.wxss */
page {
  background-color: #1c1c1e; /* 页面背景色与列表背景一致，防止露底 */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  padding-bottom: 120rpx; /* 底部导航栏空间 */
}

.container {
  width: 100%;
  min-height: 100vh;
  background-color: #E69028; /* 橙色背景填充顶部 */
}

/* --- 1. 橙色头部区域 --- */
.header-section {
  background-color: #E69028;
  padding: 20rpx 40rpx 0 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.store-label {
  position: absolute;
  left: 40rpx;
  top: 20rpx;
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.page-title {
  font-size: 80rpx;
  color: #4A3B28; /* 深褐色文字 */
  font-weight: 400;
  letter-spacing: 4rpx;
  margin-top: 40rpx;
  margin-bottom: 10rpx;
}

.date-range {
  font-size: 24rpx;
  color: #8B6940;
  margin-bottom: 60rpx;
}

/* Tab 栏 */
.tab-header {
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding-bottom: 30rpx;
}

.tab-item {
  font-size: 30rpx;
  color: #FFE4C4; /* 浅色未选中 */
  position: relative;
  padding-bottom: 10rpx;
}

.tab-item.active {
  color: #fff;
  font-weight: bold;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #FF4500; /* 红色下划线 */
  border-radius: 4rpx;
}

/* --- 2. 排行榜列表区域 --- */
.ranking-list-container {
  background-color: #111; /* 黑色背景 */
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  padding: 40rpx 30rpx;
  min-height: 60vh; /* 保证列表区域足够高 */
  width: 90%; /* 自动宽度，由 margin 决定 */
  margin: -20rpx 24rpx 0 24rpx; /* 上移并设置左右边距 */
  box-sizing: border-box; /* 防止内边距撑大容器 */
  position: relative; /* 确保层级 */
  z-index: 1;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  /* border-bottom: 1rpx solid #222; */
}

.rank-num {
  width: 60rpx;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
  margin-right: 20rpx;
}

.rank-avatar {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  border: 2rpx solid #fff;
  margin-right: 30rpx;
}

.rank-info {
  display: flex;
  flex-direction: column;
}

.rank-name {
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 8rpx;
}

.rank-score {
  color: #888;
  font-size: 24rpx;
}