/* pages/menu/index.wxss */
page {
  background-color: #1c1c1e;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* --- 头部区域 --- */
.header-bar {
  padding: 20rpx 30rpx;
  background-color: #1c1c1e;
  border-bottom: 1rpx solid #333;
}

.store-name {
  color: #FFD700;
  font-size: 32rpx;
  font-weight: bold;
}

/* --- 内容区域 --- */
.content-container {
  flex: 1;
  display: flex;
  overflow: hidden;
  margin-bottom: 120rpx; /* 为底部购物车栏留出空间 */
}

/* --- 左侧侧边栏 --- */
.sidebar {
  width: 180rpx;
  background-color: #25252b;
  height: 100%;
}

.category-item {
  padding: 40rpx 20rpx;
  text-align: center;
  color: #888;
  font-size: 28rpx;
  border-bottom: 1rpx solid #333;
}

.category-item.active {
  background-color: #FFD700;
  color: #000;
  font-weight: bold;
}

/* --- 右侧商品列表 --- */
.goods-list {
  flex: 1;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.goods-item {
  display: flex;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #333;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 20rpx;
  margin-right: 24rpx;
  background-color: #333;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.goods-desc {
  color: #666;
  font-size: 24rpx;
  margin-top: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.price-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
}

.goods-price {
  color: #FFD700;
  font-size: 36rpx;
  font-weight: bold;
}

.add-btn {
  width: 50rpx;
  height: 50rpx;
  background-color: #FFD700;
  border-radius: 50%;
  color: #000;
  font-size: 40rpx;
  line-height: 46rpx;
  text-align: center;
  font-weight: bold;
}

/* --- 购物车底部栏 --- */
.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #2c2c2e;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.3);
  z-index: 100;
}

.cart-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.cart-icon-wrapper {
  position: relative;
  margin-right: 20rpx;
}

.cart-icon {
  width: 60rpx;
  height: 60rpx;
}

.cart-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  min-width: 32rpx;
  height: 32rpx;
  background-color: #ff4444;
  border-radius: 16rpx;
  color: #fff;
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 6rpx;
}

.cart-price {
  color: #FFD700;
}

.price-symbol {
  font-size: 24rpx;
}

.price-value {
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 4rpx;
}

.checkout-btn {
  width: 200rpx;
  height: 70rpx;
  background-color: #666;
  color: #fff;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: bold;
}

.checkout-btn.active {
  background-color: #FFD700;
  color: #000;
}

/* --- 购物车详情弹窗 --- */
.cart-detail {
  position: fixed;
  bottom: -100%;
  left: 0;
  right: 0;
  height: 70%;
  background-color: rgba(0, 0, 0, 0.5);
  transition: bottom 0.3s ease;
  z-index: 999;
}

.cart-detail.show {
  bottom: 0;
}

.cart-content {
  position: absolute;
  bottom: 100rpx;
  left: 0;
  right: 0;
  height: calc(100% - 100rpx);
  background-color: #2c2c2e;
  border-radius: 30rpx 30rpx 0 0;
  padding: 30rpx;
}

.cart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #444;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
}

.clear-cart {
  color: #666;
  font-size: 28rpx;
  font-weight: normal;
}

.cart-list {
  height: calc(100% - 80rpx);
  margin-top: 20rpx;
}

.cart-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #444;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  color: #fff;
  font-size: 30rpx;
  margin-bottom: 10rpx;
}

.item-price {
  color: #FFD700;
  font-size: 28rpx;
}

.item-controls {
  display: flex;
  align-items: center;
}

.control-btn {
  width: 50rpx;
  height: 50rpx;
  background-color: #444;
  border-radius: 50%;
  color: #fff;
  font-size: 36rpx;
  line-height: 46rpx;
  text-align: center;
  font-weight: bold;
}

.item-count {
  width: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  margin: 0 20rpx;
}
