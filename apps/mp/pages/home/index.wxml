<view class="container">
  <image class="bg-image" src="/images/耗子.png" mode="aspectFill" />
  
  <view class="bg-overlay"></view>

  <view class="header-area">
    <view class="store-info">
      <text class="store-name">重庆店-尖牙tusk ></text>
    </view>
    <view class="notice-btn">
      <text>本店须知</text>
    </view>
  </view>

  <view class="center-area">
    <text class="brand-title">TUSK</text>
    
    <view class="welcome-box">
      <text class="welcome-text">欢迎来到尖牙tusk</text>
    </view>
  </view>

  <view class="bottom-panel">
    <view class="action-item" bindtap="goToMenu">
      <image class="action-icon" src="/images/点餐.png" mode="aspectFit" />
      <text class="action-title">点餐</text>
      <text class="action-subtitle">Order</text>
    </view>

    <view class="action-item" bindtap="goToReservation">
      <image class="action-icon" src="/images/预约.png" mode="aspectFit" />
      <text class="action-title">预约</text>
      <text class="action-subtitle">Reservation</text>
    </view>
  </view>

  <view class="custom-tab-bar">
    <view class="tab-item active" bindtap="switchTab" data-index="0">
      <view class="tab-icon-bg">🏠</view> 
      <text>首页</text>
    </view>
    <view class="tab-item" bindtap="switchTab" data-index="1">
      <view class="tab-icon">🎲</view>
      <text>桌面</text>
    </view>
    <view class="tab-item" bindtap="switchTab" data-index="2">
      <view class="tab-icon">📊</view>
      <text>排行榜</text>
    </view>
    <view class="tab-item" bindtap="switchTab" data-index="3">
      <view class="tab-icon">👤</view>
      <text>会员</text>
    </view>
  </view>

</view>