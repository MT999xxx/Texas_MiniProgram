.home-container {
  min-height: 100vh;
  background: #0f172a;
  padding-bottom: 120rpx;
}

/* 头部 Banner */
.hero-banner {
  position: relative;
  height: 450rpx;
  overflow: hidden;
}

.hero-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

.bg-image {
  width: 100%;
  height: 100%;
  filter: brightness(0.4);
}

.hero-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(180deg, rgba(15, 23, 42, 0.3) 0%, rgba(15, 23, 42, 0.9) 100%);
}

.hero-content {
  position: relative;
  z-index: 2;
  padding: 80rpx 48rpx 48rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.logo-section {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.logo-text {
  font-size: 88rpx;
  font-weight: bold;
  color: #fbbf24;
  font-family: Georgia, serif;
  letter-spacing: 4rpx;
  text-shadow: 0 4rpx 16rpx rgba(251, 191, 36, 0.5);
}

.store-name {
  font-size: 28rpx;
  color: #94a3b8;
  letter-spacing: 2rpx;
}

.slogan {
  font-size: 36rpx;
  color: #f1f5f9;
  font-weight: 500;
}

.sub-slogan {
  font-size: 24rpx;
  color: #cbd5e1;
  letter-spacing: 1rpx;
}

/* 快捷功能卡片 */
.quick-actions {
  padding: 0 32rpx;
  margin-top: -60rpx;
  position: relative;
  z-index: 3;
  display: flex;
  gap: 24rpx;
}

.action-card {
  flex: 1;
  background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.4);
  position: relative;
  overflow: hidden;
}

.action-card.primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(251, 191, 36, 0.1), transparent);
  border: 2rpx solid rgba(251, 191, 36, 0.3);
  border-radius: 20rpx;
}

.action-card.secondary::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.1), transparent);
  border: 2rpx solid rgba(245, 158, 11, 0.2);
  border-radius: 20rpx;
}

.card-icon {
  font-size: 56rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(251, 191, 36, 0.1);
  border-radius: 50%;
  position: relative;
  z-index: 1;
}

.card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  position: relative;
  z-index: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #f1f5f9;
}

.card-desc {
  font-size: 22rpx;
  color: #94a3b8;
}

.card-arrow {
  font-size: 56rpx;
  color: #fbbf24;
  position: relative;
  z-index: 1;
}

/* 功能网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
  padding: 48rpx 32rpx 32rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 24rpx 16rpx;
  background: #1e293b;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

.grid-icon {
  font-size: 48rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(251, 191, 36, 0.1);
  border-radius: 50%;
}

.grid-text {
  font-size: 24rpx;
  color: #cbd5e1;
}

/* 活动公告 */
.announcements {
  margin: 0 32rpx 32rpx;
  background: #1e293b;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #f1f5f9;
}

.section-more {
  font-size: 24rpx;
  color: #fbbf24;
}

.announcement-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.announcement-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx;
  background: #0f172a;
  border-radius: 12rpx;
  border-left: 4rpx solid #fbbf24;
}

.announcement-tag {
  padding: 4rpx 12rpx;
  background: rgba(251, 191, 36, 0.2);
  color: #fbbf24;
  font-size: 20rpx;
  border-radius: 8rpx;
  white-space: nowrap;
}

.announcement-title {
  flex: 1;
  font-size: 28rpx;
  color: #f1f5f9;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.announcement-time {
  font-size: 22rpx;
  color: #64748b;
  white-space: nowrap;
}

/* 底部占位 */
.bottom-placeholder {
  height: 32rpx;
}

/* 底部导航栏 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #1e293b;
  border-top: 1rpx solid #334155;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 100;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.3);
}

.tab-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 0;
}

.tab-icon {
  font-size: 40rpx;
  opacity: 0.6;
}

.tab-item.active .tab-icon {
  opacity: 1;
}

.tab-text {
  font-size: 22rpx;
  color: #94a3b8;
}

.tab-item.active .tab-text {
  color: #fbbf24;
  font-weight: bold;
}
