.hero {
  padding: 80rpx 0;
  text-align: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fbbf24;
}

.subtitle {
  display: block;
  margin-top: 16rpx;
  color: #cbd5f5;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 40rpx;
}

.primary {
  background: linear-gradient(90deg, #f472b6, #f97316);
  color: #fff;
  border: none;
}
