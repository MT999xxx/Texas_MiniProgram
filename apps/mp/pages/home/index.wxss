.home-page {
  position: relative;
  min-height: 100vh;
  overflow: hidden;
  background: #1c1c1e;
  padding-bottom: 160rpx;
}

.page-bg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  opacity: 0.45;
}

.page-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(3, 4, 7, 0.9), rgba(3, 4, 7, 0.95));
}

.home-content {
  position: relative;
  z-index: 1;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.hero-banner {
  border-radius: 28rpx;
  padding: 40rpx;
  background: rgba(18, 23, 36, 0.8);
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.35);
}

.hero-tag {
  color: rgba(255, 255, 255, 0.7);
  font-size: 26rpx;
}

.hero-title {
  font-size: 100rpx;
  font-family: Georgia, 'Times New Roman', serif;
  color: #fbbf24;
  margin: 18rpx 0 8rpx;
}

.hero-welcome {
  font-size: 34rpx;
  color: #f8fafc;
  font-weight: 600;
}

.hero-sub {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 6rpx;
}

.quick-actions {
  display: flex;
  gap: 20rpx;
}

.quick-card {
  flex: 1;
  border-radius: 24rpx;
  padding: 28rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 16rpx 30rpx rgba(0, 0, 0, 0.35);
}

.quick-card.primary {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  color: #1c0f02;
}

.quick-card.secondary {
  background: linear-gradient(135deg, rgba(71, 85, 105, 0.9), rgba(30, 41, 59, 0.9));
  color: #f8fafc;
}

.quick-title {
  font-size: 32rpx;
  font-weight: 700;
}

.quick-sub {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.quick-icon {
  font-size: 44rpx;
}

.tool-grid {
  background: rgba(17, 20, 28, 0.9);
  border-radius: 28rpx;
  padding: 28rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  box-shadow: inset 0 0 0 1rpx rgba(255, 255, 255, 0.04);
}

.tool-item {
  text-align: center;
  padding: 16rpx 10rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.03);
}

.tool-icon {
  font-size: 34rpx;
}

.tool-label {
  margin-top: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #f1f5f9;
}

.tool-desc {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.65);
}

.section {
  background: rgba(16, 18, 26, 0.95);
  border-radius: 28rpx;
  padding: 24rpx;
  box-shadow: 0 20rpx 35rpx rgba(0, 0, 0, 0.4);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 30rpx;
  color: #f8fafc;
  font-weight: 700;
}

.section-more {
  font-size: 24rpx;
  color: #fbbf24;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.activity-item {
  display: flex;
  gap: 16rpx;
  align-items: center;
  padding: 18rpx 20rpx;
  border-radius: 20rpx;
  background: rgba(12, 13, 20, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.04);
}

.activity-tag {
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
  background: rgba(251, 191, 36, 0.2);
  color: #fbbf24;
  font-size: 22rpx;
}

.activity-title {
  display: block;
  font-size: 28rpx;
  color: #f8fafc;
}

.activity-time {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #141622;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid rgba(255, 255, 255, 0.08);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgba(255, 255, 255, 0.5);
  font-size: 22rpx;
}

.tab-item.active {
  color: #fbbf24;
}

.tab-icon {
  font-size: 36rpx;
}
