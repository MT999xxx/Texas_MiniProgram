.home-page {
  min-height: 100vh;
  background: #1c1c1e;
  padding-bottom: 160rpx;
}

.hero-banner {
  position: relative;
  height: 420rpx;
  margin: 24rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.4);
}

.hero-bg {
  width: 100%;
  height: 100%;
  filter: brightness(0.35);
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(9, 9, 11, 0.7), rgba(15, 23, 42, 0.6));
}

.hero-content {
  position: absolute;
  inset: 0;
  padding: 48rpx 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #f8fafc;
}

.hero-tag {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.75);
}

.hero-title {
  font-size: 96rpx;
  font-family: Georgia, 'Times New Roman', serif;
  color: #fbbf24;
  margin: 18rpx 0 8rpx;
}

.hero-welcome {
  font-size: 34rpx;
  font-weight: 600;
}

.hero-sub {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 6rpx;
}

.quick-actions {
  display: flex;
  gap: 20rpx;
  margin: 0 24rpx 24rpx;
}

.quick-card {
  flex: 1;
  border-radius: 24rpx;
  padding: 32rpx 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.25);
}

.quick-card.primary {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  color: #1c0902;
}

.quick-card.secondary {
  background: linear-gradient(135deg, #4b5563, #1e293b);
}

.quick-title {
  font-size: 34rpx;
  font-weight: 700;
}

.quick-sub {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.75);
}

.quick-card.primary .quick-sub {
  color: rgba(28, 9, 2, 0.7);
}

.quick-icon {
  font-size: 48rpx;
}

.tool-grid {
  margin: 0 24rpx;
  background: #1c1c1e;
  border-radius: 28rpx;
  padding: 28rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  box-shadow: inset 0 0 0 1rpx rgba(255, 255, 255, 0.04);
}

.tool-item {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 20rpx;
  padding: 18rpx 10rpx;
  text-align: center;
}

.tool-icon {
  font-size: 36rpx;
}

.tool-label {
  margin-top: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #f1f5f9;
}

.tool-desc {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.6);
}

.section {
  margin: 24rpx;
  padding: 24rpx;
  border-radius: 28rpx;
  background: #141622;
  box-shadow: 0 20rpx 35rpx rgba(0, 0, 0, 0.4);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #f8fafc;
}

.section-more {
  font-size: 24rpx;
  color: #fbbf24;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 18rpx 20rpx;
  border-radius: 18rpx;
  background: rgba(13, 14, 20, 0.9);
  border: 1rpx solid rgba(255, 255, 255, 0.03);
}

.activity-tag {
  padding: 6rpx 16rpx;
  background: rgba(251, 191, 36, 0.2);
  color: #fbbf24;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.activity-body {
  flex: 1;
}

.activity-title {
  display: block;
  font-size: 28rpx;
  color: #f8fafc;
}

.activity-time {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.6);
}

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: #141622;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 1rpx solid rgba(255, 255, 255, 0.08);
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgba(255, 255, 255, 0.5);
  font-size: 22rpx;
}

.tab-item.active {
  color: #fbbf24;
}

.tab-icon {
  font-size: 36rpx;
}
