/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #0f172a 0%, #1e293b 100%);
  padding: 32rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}

.loading-text {
  color: rgba(255, 255, 255, 0.6);
  font-size: 28rpx;
}

/* 详情容器 */
.detail-container {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* 订单状态区域 */
.status-section {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
  background: rgba(30, 41, 59, 0.8);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  border: 2rpx solid rgba(251, 191, 36, 0.2);
}

.status-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  margin-right: 32rpx;
  flex-shrink: 0;
}

.status-icon-PENDING {
  background: rgba(251, 191, 36, 0.2);
  border: 4rpx solid rgba(251, 191, 36, 0.4);
}

.status-icon-PAID {
  background: rgba(34, 197, 94, 0.2);
  border: 4rpx solid rgba(34, 197, 94, 0.4);
}

.status-icon-IN_PROGRESS {
  background: rgba(59, 130, 246, 0.2);
  border: 4rpx solid rgba(59, 130, 246, 0.4);
}

.status-icon-COMPLETED {
  background: rgba(168, 85, 247, 0.2);
  border: 4rpx solid rgba(168, 85, 247, 0.4);
}

.status-icon-CANCELLED {
  background: rgba(239, 68, 68, 0.2);
  border: 4rpx solid rgba(239, 68, 68, 0.4);
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #fbbf24;
}

.status-time {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 通用区块样式 */
.info-section,
.items-section,
.cost-section,
.progress-section {
  background: rgba(30, 41, 59, 0.8);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 32rpx;
}

/* 区块标题 */
.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(251, 191, 36, 0.2);
  font-size: 32rpx;
  font-weight: bold;
  color: #fbbf24;
}

.title-icon {
  margin-right: 12rpx;
  font-size: 36rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.05);
}

.info-row:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.info-value {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.table-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.reservation-tag {
  background: rgba(251, 191, 36, 0.2);
  color: #fbbf24;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  border: 1rpx solid rgba(251, 191, 36, 0.3);
}

/* 商品容器 */
.items-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.item-card {
  background: rgba(15, 23, 42, 0.6);
  border: 2rpx solid rgba(251, 191, 36, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
}

.item-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.item-name {
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
  flex: 1;
  margin-right: 16rpx;
}

.item-price-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-shrink: 0;
}

.item-quantity {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

.item-amount {
  font-size: 28rpx;
  color: #fbbf24;
  font-weight: bold;
  min-width: 80rpx;
  text-align: right;
}

.item-description {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  line-height: 1.4;
}

.item-category {
  font-size: 22rpx;
  color: rgba(251, 191, 36, 0.8);
}

/* 费用明细 */
.cost-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.cost-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.cost-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.7);
}

.cost-value {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.cost-discount {
  color: #22c55e;
}

.cost-divider {
  height: 2rpx;
  background: rgba(251, 191, 36, 0.2);
  margin: 8rpx 0;
}

.cost-total {
  padding: 16rpx 0;
  background: rgba(251, 191, 36, 0.1);
  border-radius: 12rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.cost-total .cost-label {
  font-size: 30rpx;
  font-weight: bold;
  color: #fbbf24;
}

.cost-total .cost-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #fbbf24;
}

/* 订单进度 */
.progress-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.progress-step {
  display: flex;
  align-items: center;
  position: relative;
}

.progress-step:not(:last-child)::after {
  content: '';
  position: absolute;
  left: 24rpx;
  top: 48rpx;
  width: 4rpx;
  height: 48rpx;
  background: rgba(255, 255, 255, 0.1);
  z-index: 0;
}

.progress-step.completed:not(:last-child)::after {
  background: rgba(251, 191, 36, 0.3);
}

.step-indicator {
  width: 48rpx;
  height: 48rpx;
  margin-right: 24rpx;
  position: relative;
  z-index: 1;
}

.step-icon {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
}

.step-completed {
  background: #fbbf24;
  color: #1e293b;
}

.step-current {
  background: rgba(251, 191, 36, 0.2);
  border: 4rpx solid #fbbf24;
  color: #fbbf24;
}

.step-pending {
  background: rgba(255, 255, 255, 0.1);
  border: 4rpx solid rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.5);
}

.step-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.step-title {
  font-size: 28rpx;
  color: #fff;
  font-weight: 500;
}

.step-time {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

/* 操作区域 */
.action-section {
  position: sticky;
  bottom: 0;
  background: rgba(30, 41, 59, 0.9);
  backdrop-filter: blur(10rpx);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-top: 24rpx;
}

.button-group {
  display: flex;
  gap: 24rpx;
}

.btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  text-align: center;
}

.btn-primary {
  background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  color: #1e293b;
  box-shadow: 0 4rpx 16rpx rgba(251, 191, 36, 0.3);
}

.btn-secondary {
  background: rgba(251, 191, 36, 0.1);
  border: 2rpx solid rgba(251, 191, 36, 0.3) !important;
  color: #fbbf24;
}

.btn-cancel {
  background: rgba(239, 68, 68, 0.1);
  border: 2rpx solid rgba(239, 68, 68, 0.3) !important;
  color: #ef4444;
}

.btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}