/* 全局样式 */
page {
  background-color: #0f172a;
  color: #f1f5f9;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

/* 通用容器 */
.container {
  padding: 24rpx;
}

/* 通用按钮样式 */
button {
  border-radius: 48rpx;
  font-size: 30rpx;
}

button::after {
  border: none;
}

/* 主要按钮 */
.btn-primary {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  color: #1e293b;
  font-weight: bold;
  box-shadow: 0 4rpx 16rpx rgba(251, 191, 36, 0.4);
}

/* 次要按钮 */
.btn-secondary {
  background: #334155;
  color: #cbd5e1;
}

/* 文本颜色 */
.text-primary {
  color: #fbbf24;
}

.text-secondary {
  color: #94a3b8;
}

.text-danger {
  color: #ef4444;
}

.text-success {
  color: #10b981;
}

/* 背景色 */
.bg-primary {
  background: #1e293b;
}

.bg-secondary {
  background: #334155;
}

/* 卡片 */
.card {
  background: #1e293b;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

/* 间距 */
.mt-xs { margin-top: 8rpx; }
.mt-sm { margin-top: 16rpx; }
.mt-md { margin-top: 24rpx; }
.mt-lg { margin-top: 32rpx; }
.mt-xl { margin-top: 48rpx; }

.mb-xs { margin-bottom: 8rpx; }
.mb-sm { margin-bottom: 16rpx; }
.mb-md { margin-bottom: 24rpx; }
.mb-lg { margin-bottom: 32rpx; }
.mb-xl { margin-bottom: 48rpx; }

.ml-xs { margin-left: 8rpx; }
.ml-sm { margin-left: 16rpx; }
.ml-md { margin-left: 24rpx; }
.ml-lg { margin-left: 32rpx; }

.mr-xs { margin-right: 8rpx; }
.mr-sm { margin-right: 16rpx; }
.mr-md { margin-right: 24rpx; }
.mr-lg { margin-right: 32rpx; }

.pt-xs { padding-top: 8rpx; }
.pt-sm { padding-top: 16rpx; }
.pt-md { padding-top: 24rpx; }
.pt-lg { padding-top: 32rpx; }
.pt-xl { padding-top: 48rpx; }

.pb-xs { padding-bottom: 8rpx; }
.pb-sm { padding-bottom: 16rpx; }
.pb-md { padding-bottom: 24rpx; }
.pb-lg { padding-bottom: 32rpx; }
.pb-xl { padding-bottom: 48rpx; }

.pl-xs { padding-left: 8rpx; }
.pl-sm { padding-left: 16rpx; }
.pl-md { padding-left: 24rpx; }
.pl-lg { padding-left: 32rpx; }

.pr-xs { padding-right: 8rpx; }
.pr-sm { padding-right: 16rpx; }
.pr-md { padding-right: 24rpx; }
.pr-lg { padding-right: 32rpx; }

/* 布局 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-1 {
  flex: 1;
}

/* 文本对齐 */
.text-left {
  text-align: left;
}

.text-center {
  text-align: center;
}

.text-right {
  text-align: right;
}

/* 字体大小 */
.text-xs { font-size: 20rpx; }
.text-sm { font-size: 24rpx; }
.text-md { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 48rpx; }

/* 字体粗细 */
.font-normal {
  font-weight: normal;
}

.font-bold {
  font-weight: bold;
}

/* 圆角 */
.rounded-sm { border-radius: 8rpx; }
.rounded-md { border-radius: 12rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-xl { border-radius: 24rpx; }
.rounded-full { border-radius: 9999rpx; }

/* 阴影 */
.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.shadow-md {
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.3);
}

.shadow-lg {
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.4);
}

/* 德州扑克主题色 */
.poker-gold {
  color: #fbbf24;
}

.poker-gold-bg {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
}

/* 省略号 */
.ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.ellipsis-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
