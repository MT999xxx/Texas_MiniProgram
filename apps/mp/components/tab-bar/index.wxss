/* components/tab-bar/index.wxss */
.custom-tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx; /* 统一样式高度 */
  background-color: #262322;
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  padding-top: 20rpx;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 999;
  border-top: 1rpx solid #222;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.tab-icon-img {
  width: 150rpx;
  height: 100rpx;
  margin-bottom: 8rpx;
}

.tab-item text {
  font-size: 22rpx;
  color: #666;
}

.tab-item.active text {
  color: #FFD700;
}
/* 注意：图片颜色无法通过CSS直接改变，除非使用SVG或滤镜。这里仅改变文字颜色。 */
